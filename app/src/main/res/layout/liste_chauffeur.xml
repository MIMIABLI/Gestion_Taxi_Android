<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">


    <ImageView
        android:id="@+id/imageviewtest"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageviewtest"
        tools:text="Nom Prénom"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/nomprenom"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageviewtest"
        android:layout_below="@id/nomprenom"
        tools:text="Type de véhicule"
        android:layout_marginRight="10dp"
        android:id="@+id/vehicule"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageviewtest"
        android:layout_below="@id/prix"
        tools:text="note"
        android:layout_marginRight="10dp"
        android:id="@+id/note"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageviewtest"
        android:layout_below="@id/vehicule"
        tools:text="Prix"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/prix"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3F51B5"
        android:layout_below="@id/note"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Réserver"
        android:layout_marginRight="10dp"
        android:textSize="10dp"
        android:id="@+id/btn_reserver"
    />


</RelativeLayout>